<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">

      <div class="overview">
        <h2 class="text-center">Enter your venue details</h2>
        <br />
        <div class="new-gig-card">
          <form method="post">
            <div class="form-group">
              <label>Venue type</label>
              <input type="text" class="form-control" placeholder="House, apartment, coffee shop, bar..." name="venue_type">
            </div>

            <div class="form-group">
              <label>Venue location</label>
              <input type="text" class="form-control" placeholder="Where are you - city/state or zip code" name="venue_location">
            </div>

            <div class="form-group">
              <label>Venue capacity</label>
              <input type="text" class="form-control" placeholder="How many audience members can you hold" name="venue_capacity">
            </div>

            <div class="form-group">
              <label>Venue events</label>
              <input type="text" class="form-control" placeholder="What types of events would you host?" name="venue_events">
            </div>

            <div class="form-group">
              <label>Venue about</label>
              <input type="text" class="form-control" placeholder="Describe your venue" name="venue_about">
            </div>

            <button type="submit" class="btn btn-success btn-lg">Submit</button>
          </form>

        </div>
      </div>
    </div>
  </div>
</div>
